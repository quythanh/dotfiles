:root {
    --tab-font: 'JetBrainsMono Nerd Font';
    --urlbar-font: 'JetBrainsMono Nerd Font';

    /* try increasing or decreasing one of these two if you encounter overlap between tab and url bar */
    --urlbar-height-setting: 26px;
    --tab-min-height: 30px !important;

    /* i don't recommend you to touch this unless you know what you're doing */
    --tabpanel-background-color: transparent !important;
    --arrowpanel-menuitem-padding: 2px !important;
	--arrowpanel-border-radius: 0px !important;
	--arrowpanel-menuitem-border-radius: 0px !important;
	--toolbarbutton-border-radius: 0px !important;
	--toolbarbutton-inner-padding: 0px 2px !important;
	--toolbar-field-focus-background-color: var(--urlbar-focused-bg-color) !important;
	--toolbar-field-background-color: var(--urlbar-not-focused-bg-color) !important;
	--toolbar-field-focus-border-color: transparent !important;
    --uc-autohide-toolbar-delay: 600ms; /* The toolbar is hidden after 0.6s */
    --uc-toolbox-rotation: 82deg;

    --bg: #00000011;
}

/* ------------ Tab Font Size ------------ */
#TabsToolbar, .tabbrowser-tab {
	font-size: 14px !important;
}

/* ------------ URL Bar Font Size ------------ */ 
#urlbar-container {
	--urlbar-container-height: var(--urlbar-height-setting) !important;
	font-size: 14px;
}


/* ------------------GENERAL DEBLOAT----------------------- */

/* Bottom left page loading status or url preview */
#statuspanel { display: none !important; }

/* remove radius from right-click popup */
menupopup, panel { --panel-border-radius: 0px !important; }
menu, menuitem, menucaption { border-radius: 0px !important; }

/* no stupid large buttons in right-click menu */
menupopup > #context-navigation { display: none !important; }
menupopup > #context-sep-navigation { display: none !important; }

#main-window {
    background: transparent !important;
    border: 0px !important;
}



/* ------------------NAVBAR DEBLOAT------------------------ */

#reload-button,
#stop-button,
#home-button,
#library-button {
    display: none;
}
/* #fxa-toolbar-menu-button { display: none; } */

/* empty space before and after the url bar */
#customizableui-special-spring1, #customizableui-special-spring2 { display: none; }
.private-browsing-indicator-with-label { display: none; }



/* --------------------NAVBAR STYlE----------------------- */ 

toolbar {
    background: transparent !important;
    border: 0px !important;
}

/* remove padding between toolbar buttons */
toolbar .toolbarbutton-1 { padding: 0 0 !important; }

/* add it back to the downloads button, otherwise it's too close to the urlbar */
#downloads-button {
	margin-left: 2px !important;
}

/* add padding to the right of the last button so that it doesn't touch the edge of the window */
#PanelUI-menu-button {
	padding: 0px 4px 0px 0px !important;
}

#nav-bar {
    background: transparent !important;
    border: 0px !important;
}

#navigator-toolbox {
    background: transparent !important;
    border: 0px !important;
}

#urlbar-container {
	--urlbar-container-height: var(--urlbar-height-setting) !important;
	margin-left: 0 !important;
	margin-right: 0 !important;
	padding-top: 0 !important;
	padding-bottom: 0 !important;
	font-family: var(--urlbar-font, 'monospace');
}

#urlbar {
	--urlbar-height: var(--urlbar-height-setting) !important;
	--urlbar-toolbar-height: var(--urlbar-height-setting) !important;
	min-height: var(--urlbar-height-setting) !important;
}

#urlbar-input {
	margin-left: 0.4em !important;
	margin-right: 0.4em !important;
    border: none !important;
}

.urlbarView {
	background-image: linear-gradient(to right, var(--toolbar-bgcolor), transparent) !important;
    border: 0px !important;
}

#urlbar > #urlbar-background {
    border: none !important;
    box-shadow: none !important;
}

hbox#urlbar[open="true"] hbox=#urlbar-background,
#urlbar-background {
    background: #000000E0 !important;
    border: 0px !important;
}

/* keep pop-up menus from overlapping with navbar */
#widget-overflow { margin: 4px !important; }
#customizationui-widget-panel { margin: 4px !important; }
#unified-extensions-panel { margin-top: 4px !important; }
#appMenu-popup { margin-top: 4px !important; }

/* Move findbar to the top left */
findbar{
  order: -1;
  margin-bottom: -33px;
  position: relative;
  border-top: none !important;
  padding: 0 !important;
  transition: transform 82ms linear, opacity 82ms linear 32ms !important;
  background: none !important;
  pointer-events: none;
  z-index: 1;
  white-space: nowrap;
}

.findbar-container > .findbar-find-fast{
  padding: var(--toolbarbutton-inner-padding) 1px;
  margin: 0 !important;
}

findbar[hidden]{ transform: translateY(-30px);}

findbar > .findbar-container,
findbar > .close-icon{
  border: 1px solid var(--chrome-content-separator-color);
  border-width: 0 0 1px 0px;
  background-color: var(--lwt-accent-color) !important;
  background-image: linear-gradient(var(--toolbar-bgcolor),var(--toolbar-bgcolor)),var(--lwt-header-image,none);
  pointer-events: auto;
}

findbar > .findbar-container{
  border-bottom-right-radius: 4px;
  border-right-width: 1px;
  height: initial !important;
  margin-inline: 0px !important;
  overflow-inline: visible !important;
}

.findbar-find-status{
  display: flex;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-grow: 1;
}
 
.findbar-closebutton{
  margin: 0 !important;
  border-radius: 0 !important;
  padding: 5px !important;
  width: initial !important;
  order: -1;
}
.findbar-closebutton > image{ padding: 3px }
.findbar-closebutton:hover > image{
  background: var(--toolbarbutton-hover-background) !important;
  border-radius: 4px
}
findbar > .findbar-container > hbox{ margin: 0 5px }
 
findbar::after{
  content:"";
  display: flex;
  flex-grow: 100;
} 

@media (-moz-bool-pref: "userchrome.floating-findbar-on-right.enabled"),
       -moz-pref("userchrome.floating-findbar-on-right.enabled"){
  findbar{
    flex-direction: row-reverse;
  }
  findbar > .findbar-container{
    flex-direction: row-reverse;
    border-inline-width: 1px 0px;
    border-bottom-right-radius: 0px;
    border-bottom-left-radius: 4px;
  }
  /*
  Move findbar so it isn't over the scrollbar
  Delete if you want findbar to begin from right window edge
  */
  findbar{
    margin-right: 16px;
    border-right: 1px solid var(--chrome-content-separator-color);
  }
}

